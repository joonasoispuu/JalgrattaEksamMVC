@model IEnumerable<JalgrattaEksamMVC.Models.Jalgrattaeksam>

@{
    ViewData["Title"] = "Teooria tulemus";
}

<h1>Teooria tulemus</h1>

<p>
    <a asp-action="Registreeri">Registreeri</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Eesnimi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Perekonnanimi)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Teooriatulemus)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Eesnimi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Perekonnanimi)
                </td>
                <td>
                    <form asp-action="TeooriaTulemus">
                        <input type="hidden" value="@item.Id" name="@nameof(item.Id)" />
                        <div class="d-flex">
                            <div class="form-group mr-1">
                                <input type="number" value="@item.Teooriatulemus" name="@nameof(item.Teooriatulemus)" min="-1" max="10" class="form-control" />
                            </div>
                            <div class="form-group">
                                <input type="submit" value="Salvesta" class="btn btn-primary" />
                            </div>
                        </div>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>